public Boolean isPalindrome(String str){
    //code here
    str = str.toLowerCase();
    List<String> letters = new List<String>();

    for (String c : str.split(''))
        if (c.isAlphanumeric())
            letters.add(c);

    Integer i = 0;
    Integer j = letters.size()-1;

    while ( (i <= j) && (letters[i] == letters[j]))
    {
        i++;
        j--;
    }

    if (i > j)
        return true;
    else
        return false;
}