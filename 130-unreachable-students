public List<apxio__Student__c> selectUnreachableStudents() {
    // code here

        List<apxio__Student__c> result = new List<apxio__Student__c>();
        
        for(apxio__Student__c s : [SELECT Id, Name FROM apxio__Student__c WHERE apxio__Active__c = TRUE])
            if (String.isBlank(s.apxio__Phone__c) && String.isBlank(s.apxio__Email__c))
                result.add(s);        

        result.sort();
        return result;
    }