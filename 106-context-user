public Map<String,String> getContextUserInformation(){

    Map<String,String> result = new Map<String,String>();
    result.put('EmailId', System.UserInfo.getUserEmail());
    result.put('ProfileId', System.UserInfo.getProfileId());
    result.put('Type', System.UserInfo.getUserType());
    result.put('UserName', System.UserInfo.getUserName());

    return result;    
}